<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsTaskApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.NewsTaskApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextLocateNews">
    <item name="android:textColorHint">@color/dark_gray</item>
    <item name="android:textColor">@color/blue</item>
    <item name="android:paddingEnd">@dimen/_10ssp</item>
    <item name="android:paddingStart">@dimen/_10ssp</item>
    <item name="android:textSize">@dimen/_11ssp</item>
    <item name="colorControlActivated">@color/blue</item>
    </style>
    <style name="blueBottom">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/_3ssp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="background">@drawable/shap1_buttom_blue</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textStyle">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/_3ssp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="error_appearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHighlight">@color/red</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:textColorLink">@color/red</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>