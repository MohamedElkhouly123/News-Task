<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    tools:context=".view.main.views.activities.HomeCycleActivityKotlin">
<!--    tools:context=".view.main.views.activities.HomeCycleActivity">-->


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_general_toolbar_title_tv"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/app_general_toolbar_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginStart="@dimen/_15sdp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_15sdp"
        android:elevation="@dimen/_5sdp"
        android:src="@drawable/ic_baseline_arrow_back_24"
      />
    <ImageView
        android:id="@+id/app_general_toolbar_search_img"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_baseline_search_24"
        android:layout_gravity="center_vertical|right"
        />
    <AutoCompleteTextView
        android:id="@+id/app_general_toolbar_search_auto_edtxt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/_15ssp"
        android:elevation="@dimen/_5sdp"
        android:paddingStart="@dimen/_8sdp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingEnd="@dimen/_8sdp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:drawableStart="@drawable/ic_baseline_search_gray_24"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="@string/search"
        android:textColor="@color/black"
        android:textColorHint="#BCBCBC"
        android:background="@drawable/white_shape3"
        android:layout_gravity="left|center_vertical"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:completionThreshold="1"
        android:popupBackground="@color/gray"
        />
</FrameLayout>